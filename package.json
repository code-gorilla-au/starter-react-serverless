{
	"name": "application-tracker",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">= 22.0.0"
	},
	"scripts": {
		"build": "vite build",
		"check": "svelte-kit sync && svelte-check --tsconfig tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig tsconfig.json --watch",
		"db:create": "docker compose -f docker-compose.yaml up -d",
		"db:create-tables": "src/scripts/local-db.sh",
		"db:down": "docker compose -f docker-compose.yaml down -v",
		"db:reset": "npm run db:down && npm run db:create && npm run db:create-tables",
		"dev": "vite dev",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"prepare": "svelte-kit sync || echo ''",
		"preview": "vite preview",
		"test": "npm run test:unit -- --run",
		"test:unit": "vitest"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.22.0",
		"@internationalized/date": "^3.8.1",
		"@lucide/svelte": "^0.544.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@tanstack/table-core": "^8.21.3",
		"@types/bcrypt": "^6.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"bits-ui": "^2.11.0",
		"clsx": "^2.1.1",
		"eslint": "^9.22.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"sst": "^3.17.21",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"svelte-sonner": "^1.0.5",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.0.0",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.893.0",
		"@aws-sdk/lib-dynamodb": "^3.893.0",
		"bcrypt": "^6.0.0",
		"date-fns": "^4.1.0",
		"dynamodb-toolbox": "^2.7.1",
		"jose": "^6.1.0",
		"mode-watcher": "^1.1.0",
		"pino": "^9.12.0",
		"sst": "3.17.14",
		"svelte-kit-sst": "2.43.5",
		"zod": "^3.25.76"
	}
}
